(require 'rst)  ;; So faces are available to edit.

;; Get rid of grey background and use bright foreground instead
(set-face-background 'rst-level-1-face "black")
(set-face-foreground 'rst-level-1-face "red")

(set-face-background 'rst-level-2-face "black")
(set-face-foreground 'rst-level-2-face "orange")

(set-face-background 'rst-level-3-face "black")
(set-face-foreground 'rst-level-3-face "yellow")

(set-face-background 'rst-level-4-face "black")
(set-face-foreground 'rst-level-4-face "yellow")

(set-face-background 'rst-level-5-face "black")
(set-face-foreground 'rst-level-5-face "yellow")

(set-face-background 'rst-level-6-face "black")
(set-face-foreground 'rst-level-6-face "yellow")

